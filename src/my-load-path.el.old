;;;; my-load-path.el - Set up the load-path and package system.

(require 'package)

(add-to-list 'load-path "~/.emacs.d/src" t)
(setq load-path (delete-dups load-path))

(setq package-user-dir "~/.emacs.d.elpa")

(setq package-archives '(
                         ("org"       . "http://orgmode.org/elpa/")
                         ("melpa"     . "http://melpa.org/packages/")
                         ("gnu"       . "http://elpa.gnu.org/packages/")
                         ))

(package-initialize)

(defvar my-packages '(
                      auto-complete
                      auto-complete-clang
                      base16-theme
                      bash-completion
                      bind-key
                      bubbleberry-theme
                      cmake-mode
                      color-theme-sanityinc-tomorrow
                      dash
                      diminish
                      dropdown-list
                      eldoc-extension
                      elisp-slime-nav
                      exec-path-from-shell
                      flx-ido
                      flycheck
                      fuzzy
                      geiser
                      ggtags
                      ghc
                      ghci-completion
                      haskell-mode
                      hi2
                      ido-hacks
                      ido-ubiquitous
                      ido-vertical-mode
                      json-mode ;; need this
                      json-reformat
                      magit
                      morlock
                      noctilux-theme
                      org-plus-contrib
                      paredit
                      paredit-menu
                      popup
                      smex
                      use-package
                      visual-regexp
                      wrap-region
                      yasnippet
                      ))

;; Packages I no longer load
;; ace-jump-mode
;; key-chord

(defun get-my-packages ()
  "Get all packages listed in the `my-packages' variable."
  (interactive)
  (unless package-archive-contents
    (package-refresh-contents))

  (dolist (package my-packages)
    (unless (package-installed-p package)
      (package-install package))))

(get-my-packages)

(provide 'my-load-paths)

